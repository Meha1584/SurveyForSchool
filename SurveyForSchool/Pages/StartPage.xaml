<Page x:Class="SurveyForSchool.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SurveyForSchool"
      mc:Ignorable="d"
      Title="StartPage" Width="368" Height="198">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите ваше имя"/>
            <TextBox Name="inputName" KeyDown="FieldOpening"/>
            <Label Content="Введите пароль" Name="checkElement" Visibility="Hidden"/>
            <TextBox Name="inputPassword" Visibility="Hidden"/>
            <Button Content="Перейти" Click="Go" Margin="5" Name="goPage"/>
        </StackPanel>
    </Grid>
</Page>
